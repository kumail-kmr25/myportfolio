generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Admin {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  name      String
  email     String   @unique
  phone     String   @unique
  userId    String   @unique
  password  String
  resetToken       String?
  resetTokenExpiry DateTime?
  created_at DateTime @default(now())
}

model ActiveProject {
  id              String   @id @default(auto()) @map("_id") @db.ObjectId
  clientName      String
  projectTitle    String
  status          String   // active / completed / cancelled
  startDate       DateTime
  expectedEndDate DateTime
  createdAt       DateTime @default(now())
}

model SystemConfig {
  id                String   @id @default(auto()) @map("_id") @db.ObjectId
  maxActiveProjects Int      @default(2)
  manualOverride    String?  // available / limited / booked
  overrideMessage   String?
}

model Testimonial {
  id                  String   @id @default(auto()) @map("_id") @db.ObjectId
  name                String
  email               String
  company             String?
  relationship_type   String   // Worked With Me As
  intervention_type   String   // Service Provided
  message             String
  rating              Int      // 1-7
  about_delivery_lead String   // How was communication & delivery?
  permission          Boolean  @default(false)
  approved            Boolean  @default(false)
  created_at          DateTime @default(now())
}

model ContactSubmission {
  id              String   @id @default(auto()) @map("_id") @db.ObjectId
  name            String
  email           String
  company         String?
  inquiryType     String?  // Reason for Contact
  serviceRequired String?  // Service Needed
  budgetRange     String?
  timeline        String?
  message         String   // Project Details
  foundBy         String?  // How Did You Find Me?
  replied         Boolean  @default(false)
  created_at      DateTime @default(now())
}

model Project {
  id                 String   @id @default(auto()) @map("_id") @db.ObjectId
  title              String
  description        String
  tags               String[]
  image              String
  demo               String
  deployment         String?
  github             String
  beforeImageUrl     String?
  afterImageUrl      String?
  improvementDetails String?
  metrics            String[]
  created_at         DateTime @default(now())
}

model CaseStudy {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  title        String
  errorMessage String
  rootCause    String
  steps        String[]
  solution     String
  impact       String
  techStack    String[]
  isPublished  Boolean  @default(false)
  created_at   DateTime @default(now())
}

model FeatureRequest {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  name       String
  email      String
  message    String
  category   String   // UI / Performance / New Tool / Other
  status     String   @default("pending") // pending / building / completed
  created_at DateTime @default(now())
}

model SiteStats {
  id                       String   @id @default(auto()) @map("_id") @db.ObjectId
  totalProjects            Int      @default(0)
  bugsFixed                Int      @default(0)
  caseStudiesWritten       Int      @default(0)
  featureRequestsCompleted Int      @default(0)
  yearsLearning            Int      @default(0)
  deploymentCount          Int      @default(0)
  lastUpdated              DateTime @default(now())
}

model BlogPost {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  title      String
  excerpt    String
  content    String
  category   String
  readTime   String
  published  Boolean  @default(false)
  created_at DateTime @default(now())
}

model IssuePattern {
  id                 String   @id @default(auto()) @map("_id") @db.ObjectId
  keywords           String[]
  possibleCauses     String[]
  debugSteps         String[]
  complexity         String   // Low / Medium / High
  recommendedService String
  createdAt          DateTime @default(now())
}

model DiagnosticLog {
  id               String   @id @default(auto()) @map("_id") @db.ObjectId
  description      String
  techStack        String?
  errorMessage     String?
  environment      String   // Local / Production / Both
  matchedPatternId String?  @db.ObjectId
  createdAt        DateTime @default(now())
}

model HireRequest {
  id              String   @id @default(auto()) @map("_id") @db.ObjectId
  name            String
  email           String
  company         String?
  description     String
  selectedService String
  budgetRange     String
  timeline        String
  projectType     String
  source          String   @default("hire_me")
  status          String   @default("new") // new / contacted / closed
  createdAt       DateTime @default(now())
}

model JourneyPhase {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  phase       String   // e.g., "Phase 1"
  title       String
  description String
  icon        String   // Lucide icon name
  color       String   // Tailwind gradient classes
  order       Int
  createdAt   DateTime @default(now())
}

model Skill {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  name      String
  status    String   // expert / learning
  order     Int
  createdAt DateTime @default(now())
}
