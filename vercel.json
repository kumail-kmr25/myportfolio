{
    "version": 2,
    "buildCommand": "npm run build",
    "installCommand": "npm install --no-audit --no-fund --loglevel=error",
    "framework": "nextjs",
    "functions": {
        "server/src/index.ts": {
            "runtime": "vercel-node@latest"
        }
    },
    "rewrites": [
        {
            "source": "/api/:path*",
            "destination": "/server/src/index.ts"
        }
    ]
}