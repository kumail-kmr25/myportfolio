{
  "name": "portfolio-monorepo",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "client",
    "packages/*"
  ],
  "scripts": {
    "postinstall": "npx prisma generate --schema=packages/database/prisma/schema.prisma",
    "dev": "npm run dev -w @portfolio/frontend",
    "build": "npm run build -w @portfolio/shared && npm run build -w @portfolio/frontend",
    "lint": "npm run lint --workspaces",
    "db:push": "npx prisma db push --schema=packages/database/prisma/schema.prisma",
    "db:seed": "node packages/database/prisma/seed.js"
  },
  "devDependencies": {
    "typescript": "^5"
  },
  "engines": {
    "node": ">=22.13.0"
  }
}