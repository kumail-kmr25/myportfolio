{
  "name": "portfolio-monorepo",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "client",
    "server",
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev -w @portfolio/frontend\" \"npm run dev -w @portfolio/backend\"",
    "build": "npm run build --workspaces",
    "lint": "npm run lint --workspaces",
    "db:push": "npx prisma db push --schema=packages/database/prisma/schema.prisma",
    "db:seed": "node packages/database/prisma/seed.js"
  },
  "devDependencies": {
    "concurrently": "^9.2.1",
    "typescript": "^5"
  }
}