{
  "name": "portfolio-monorepo",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "client",
    "packages/*"
  ],
  "scripts": {
    "postinstall": "npx prisma generate --schema=packages/database/prisma/schema.prisma",
    "build": "npm run build --workspaces --if-present",
    "dev": "npm run dev --workspaces --parallel",
    "lint": "npm run lint --workspaces",
    "db:push": "npx prisma db push --schema=packages/database/prisma/schema.prisma",
    "db:seed": "node packages/database/prisma/seed.js"
  },
  "devDependencies": {
    "typescript": "^5"
  },
  "engines": {
    "node": "^22"
  }
}