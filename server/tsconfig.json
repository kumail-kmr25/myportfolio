{
    "compilerOptions": {
        "target": "es2020",
        "module": "commonjs",
        "lib": [
            "es2020",
            "dom"
        ],
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "./dist",
        "baseUrl": ".",
        "paths": {
            "@/*": [
                "src/*"
            ],
            "@portfolio/shared": [
                "../../packages/shared/src/index"
            ],
            "@portfolio/database": [
                "../../packages/database/index"
            ]
        }
    },
    "include": [
        "src/**/*"
    ]
}